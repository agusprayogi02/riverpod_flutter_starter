    "version": "0.2.0",
    "configurations": [
        {
            "name": "riverpod_flutter_starter",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "args": [
                "--flavor",
                "dev",
                "-t",
                "main.dart",
            ]
        },
        {
            "name": "riverpod_flutter_starter (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile",
            "args": [
                "--flavor",
                "staging",
                "-t",
                "main_staging.dart",
            ]
        },
        {
            "name": "riverpod_flutter_starter (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "args": [
                "--flavor",
                "prod",
                "-t",
                "main_prod.dart",
            ]
        }
    ]
}